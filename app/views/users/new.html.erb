<%= form_with model: @user, local: true do |form| %>
  <p><%= form.label :username, 'Username:' %>
  <%= form.text_field :username %></p>
  <p><%= form.label :email, 'Email:' %>
  <%= form.text_field :email %></p>
  <p><%= form.label :password, 'Password:' %>
  <%= form.password_field :password %></p>
  <p><%= form.label :password_confirmation, 'Confirm Password:' %>
  <%= form.password_field :password_confirmation %></p>
  <p><%= form.submit 'Create User' %></p>
<% end %>