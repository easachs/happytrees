<h1><%= @tree.species %></h1>
<p>Diameter: <%= @tree.diameter %> in</p>
<% if @tree.healthy %>
  <p><%= 'Healthy'%></p>
<% else %>
  <p><%= 'Unhealthy'%></p>
<% end %>

<p><%= link_to "Update Tree", "/trees/#{@tree.id}/edit" %>
 / <%= link_to 'Delete Tree', "/trees/#{@tree.id}", method: :delete%></p>