<h1>Trees</h1>

<% @trees.show_healthy.each_with_index do |tree, index| %>
  <div id="tree_<%= index%>">
  <h3><%= tree.species %> <%= link_to "Edit", "/trees/#{tree.id}/edit" %></h3>
  <p>Diameter: <%= tree.diameter %> in</p>
  <% if tree.healthy %>
    <p><%= 'Healthy'%></p>
  <% else %>
    <p><%= 'Unhealthy'%></p>
  <% end %>
  </div>
<% end %>