<p><%= link_to "New Park", "/parks/new" %></p>

<h1>Parks</h1>

<% @parks.each_with_index do |park, index| %>
  <div id="park_<%= index%>">
  <h3><%= park.name %> <%= link_to "Edit", "/parks/#{park.id}/edit" %> / <%= link_to "Delete", "/parks/#{park.id}", method: :delete %></h3>
  <p>Established: <%= park.year %></p>
  <% if park.affluent %>
    <p><%= 'Affluent'%></p>
  <% else %>
    <p><%= 'Not affluent'%></p>
  <% end %>
  <p>Created: <%= park.created_at %></p>
  </div>
<% end %>

<p><%= link_to "Sort By Tree Count", "/parks?sort=treecount"%></p>